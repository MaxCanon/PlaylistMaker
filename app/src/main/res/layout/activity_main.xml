<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_page"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:paddingTop="14dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:paddingLeft="17dp"
        android:paddingRight="15dp"
        android:paddingBottom="28dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/icon_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background"
            android:inputType="textCapWords"
            android:letterSpacing="0"
            android:text="@string/search"
            android:textColor="@color/main_text"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/icon_search"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/icon_media_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background"
            android:inputType="textCapWords"
            android:letterSpacing="0"
            android:text="@string/media_library"
            android:textColor="@color/main_text"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/icon_media_library"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/icon_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background"
            android:inputType="textCapWords"
            android:letterSpacing="0"
            android:text="@string/settings"
            android:textColor="@color/main_text"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/icon_settings"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black" />
    </LinearLayout>

</LinearLayout>