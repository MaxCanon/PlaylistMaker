<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="@dimen/art_size_recycle"
        android:layout_height="@dimen/art_size_recycle"
        android:layout_marginStart="13dp"
        android:layout_marginVertical="@dimen/art_margin_recycle"
        android:layout_marginEnd="@dimen/art_margin_recycle" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            style="@style/Recycle_Track_Name"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/Recycle_ArtistName_TrackTime"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ellipse"
                style="@style/Ellipse"
                android:src="@drawable/ellipse"/>

            <TextView
                android:id="@+id/track_time"
                style="@style/Recycle_ArtistName_TrackTime" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        style="@style/Forward_Arrow_Icon"
        android:src="@drawable/icon_arrow_forward" />

</LinearLayout>