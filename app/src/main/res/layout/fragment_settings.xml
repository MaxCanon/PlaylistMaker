<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.ui.fragment.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        style="@style/Toolbar"
        android:layout_height="?attr/actionBarSize">

        <TextView
            style="@style/ToolbarTextColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/settings"
            android:textSize="@dimen/text_size22"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <Switch
        android:id="@+id/switchTheme"
        android:layout_width="match_parent"
        style="@style/TextViewStyle_Settings"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/night_theme"
        tools:ignore="UseSwitchCompatOrMaterialXml,VisualLintButtonSize" />

    <TextView
        android:id="@+id/iconShareBtn"
        style="@style/TextViewStyle_Settings"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/share_app"
        app:drawableRightCompat="@drawable/icon_share" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Settings_Texts"
            android:text="@string/contact_support" />

        <ImageView
            android:id="@+id/support_btn"
            style="@style/Settings_Images"
            android:src="@drawable/icon_support" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Settings_Texts"
            android:text="@string/terms_of_service" />

        <ImageView
            android:id="@+id/terms_btn"
            style="@style/Settings_Images"
            android:src="@drawable/icon_arrow_forward" />


    </FrameLayout>

</LinearLayout>