<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background_settings"
    tools:context=".search.ui.fragment.SearchFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settings_toolbar"
        style="@style/Toolbar">

        <TextView
            style="@style/TextView"
            android:text="@string/input_hint" />

    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:id="@+id/search_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputEditText"
            style="@style/Input_Edit_Text"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />

        <ImageView
            android:id="@+id/clearImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:padding="@dimen/padding_left"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_clear_edittext"
            app:tint="@color/knob_color"
            tools:ignore="ContentDescription,ImageContrastCheck" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/switch_compat_knob_night"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/nothingToFound"
            style="@style/nothingToFound"
            android:layout_marginTop="88dp"
            android:text="@string/nothing_was_found"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/internetProblem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                style="@style/problem_network"
                android:layout_gravity="center_horizontal"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/errorText"
                style="@style/connectionProblem"
                android:text="@string/connection_problem" />

            <Button
                android:id="@+id/refreshButton"
                style="@style/ClearHistory"
                android:text="@string/update"
                app:cornerRadius="54dp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchHistory_layout"
            style="@style/searchHistory_layout"
            android:visibility="gone">

            <TextView style="@style/SearchHistory"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/searchHistoryRecycler"/>

            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/searchHistoryRecycler"
                style="@style/searchHistory_recyclerView"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <Button
                app:layout_constraintTop_toBottomOf="@id/searchHistoryRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/clearHistoryButton"
                style="@style/ClearHistory"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/clear_history"
                app:cornerRadius="54dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</LinearLayout>