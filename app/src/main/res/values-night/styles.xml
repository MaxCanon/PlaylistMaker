<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Settings_Texts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/margin_settings_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_right</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Settings_Images">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_right</item>
        <item name="tint">@color/white</item>
        <item name="thumbTint">@color/switch_compat_knob_night</item>
        <item name="trackTint">@color/switch_compat_track_night</item>

    </style>

    <style name="Input_Edit_Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:drawableTint">@color/main_text</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textColorHint">@color/main_text</item>

    </style>

    <style name="Clear_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/main_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Forward_Arrow_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginStart">@dimen/padding_left</item>
    </style>

    <style name="Recycle_Track_Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Recycle_ArtistName_TrackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">@dimen/text_size11</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Ellipse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginStart">@dimen/text_margin_recycle</item>
        <item name="android:layout_marginEnd">@dimen/text_margin_recycle</item>
    </style>

</resources>