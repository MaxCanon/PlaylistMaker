<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Settings_Texts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/margin_settings_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_right</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Settings_Images">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_right</item>
        <item name="tint">@color/white</item>
        <item name="thumbTint">@color/switch_compat_knob_night</item>
        <item name="trackTint">@color/switch_compat_track_night</item>

    </style>
</resources>