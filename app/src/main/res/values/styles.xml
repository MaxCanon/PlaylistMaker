<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Main_Buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>


    </style>

    <style name="Settings_Texts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/margin_settings_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_right</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>


    </style>

    <style name="Settings_Images">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_right</item>
        <item name="tint">@color/knob_color</item>
        <item name="thumbTint">@color/knob_color</item>
        <item name="trackTint">@color/tint_color</item>


    </style>
</resources>
