<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Main_Buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>


    </style>

    <style name="Settings_Texts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/margin_settings_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_right</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>


    </style>

    <style name="Settings_Images">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_right</item>
        <item name="tint">@color/knob_color</item>
        <item name="thumbTint">@color/knob_color</item>
        <item name="trackTint">@color/tint_color</item>

    </style>

    <style name="Input_Edit_Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:drawableTint">@color/knob_color</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textColorHint">@color/knob_color</item>

    </style>

    <style name="Clear_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/knob_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Forward_Arrow_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/knob_color</item>
        <item name="android:layout_marginStart">@dimen/icon_margin</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_right</item>

    </style>


    <style name="Recycle_Track_Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Recycle_ArtistName_TrackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">@dimen/text_size11</item>
        <item name="android:textColor">@color/knob_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Ellipse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/knob_color</item>
        <item name="android:layout_marginStart">@dimen/text_margin_recycle</item>
        <item name="android:layout_marginEnd">@dimen/text_margin_recycle</item>
    </style>

    <style name="placeholderMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_recycle</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_recycle</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="connectionProblem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/apple_connection_problem</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="nothingToFoundImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/apple_nothing_to_find</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tvErrorMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight" tools:ignore="NewApi">24dp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textSize">@dimen/text_error_message</item>
    </style>

    <style name="BtnUpdate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_recycle</item>
        <item name="android:backgroundTint">@color/main_text</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
        <item name="android:text">@string/Update</item>
        <item name="android:textSize">@dimen/text_update_button</item>

    </style>
</resources>
