<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Main_Buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>


    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Settings_Texts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/margin_settings_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_right</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>


    </style>

    <style name="Settings_Images">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_right</item>
        <item name="tint">@color/knob_color</item>
        <item name="thumbTint">@color/knob_color</item>
        <item name="trackTint">@color/tint_color</item>

    </style>

    <style name="Input_Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_left</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:drawableStart">@drawable/edittext_search_icon</item>
        <item name="android:drawablePadding">@dimen/icon_margin</item>
        <item name="android:drawableTint">@color/knob_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/input_hint</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">255</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/icon_margin</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textColorHint">@color/knob_color</item>
        <item name="android:textCursorDrawable">@drawable/color_coursor</item>


    </style>

    <style name="Clear_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/knob_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Forward_Arrow_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/knob_color</item>
        <item name="android:layout_marginStart">@dimen/icon_margin</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_right</item>

    </style>


    <style name="Recycle_Track_Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Recycle_ArtistName_TrackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">@dimen/text_size11</item>
        <item name="android:textColor">@color/knob_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Ellipse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/knob_color</item>
        <item name="android:layout_marginStart">@dimen/text_margin_recycle</item>
        <item name="android:layout_marginEnd">@dimen/text_margin_recycle</item>
    </style>

    <style name="placeholderMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_recycle</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_recycle</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="connectionProblem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="nothingToFound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="drawableTopCompat">@drawable/apple_nothing_to_find</item>
    </style>

    <style name="tvErrorMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight" tools:ignore="NewApi">24dp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textSize">@dimen/text_error_message</item>
    </style>

    <style name="BtnUpdate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_recycle</item>
        <item name="android:backgroundTint">@color/main_text</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
        <item name="android:text">@string/update</item>
        <item name="android:textSize">@dimen/text_update_button</item>
    </style>

    <style name="SearchHistory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/search_history</item>
    </style>

    <style name="ClearHistory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="audio_player_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:textColor">@color/knob_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="audio_player_data">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="audio_player_duration_track_play">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">39dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_update_button</item>
    </style>

    <style name="audio_player_add_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin63dp</item>
        <item name="android:layout_marginBottom">@dimen/margin84dp</item>
        <item name="android:src">@drawable/add_button</item>
    </style>

    <style name="audio_player_play_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:src">@drawable/play_button</item>
    </style>

    <style name="audio_player_like_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin63dp</item>
        <item name="android:layout_marginEnd">@dimen/margin8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin84dp</item>
        <item name="android:src">@drawable/like_button</item>
    </style>

    <style name="audio_player_artist_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin8dp</item>
        <item name="android:layout_marginBottom">38dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="audio_player_track_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/text_size22</item>
    </style>

    <style name="audio_player_album_cover">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">84dp</item>
    </style>


    <style name="audio_player_back_button">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@drawable/icon_arrow_back</item>
    </style>

    <style name="searchHistory_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="problem_network">
        <item name="android:layout_width">120dp</item>
        <item name="android:src">@drawable/apple_connection_problem</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="background_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F5F5F5</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIconTint">@color/main_text</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/input_hint</item>
        <item name="android:textSize">@dimen/text_size22</item>
    </style>

    <style name="searchHistory_recyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <style name="font_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_update_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#F5F5F5</item>
        <item name="tabTextAppearance">@style/font_style</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/main_text</item>
    </style>

</resources>
