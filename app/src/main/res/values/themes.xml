<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="MainPageBackground">
        <item name="android:background">@color/background_main_page</item>
    </style>

    <style name="SettingsPageBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarTextColor">
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="ToolbarArrowColor">
        <item name="navigationIcon">@drawable/icon_arrow_back</item>
    </style>
</resources>